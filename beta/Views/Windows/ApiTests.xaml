<Window x:Class="beta.Views.Windows.ApiTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beta.Views.Windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:ThemeManager.RequestedTheme="Light"
        Title="ApiTests" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="Files"/>
            <TextBlock x:Name="CurrentFile"/>
            <TextBlock x:Name="PathText"/>
            <TextBlock x:Name="Speed"/>
            <TextBlock x:Name="Progress"/>
        </StackPanel>
        <ProgressBar VerticalAlignment="Center" Name="ProgressBar" Height="100"
                     Foreground="Black"/>
        <Button Content="Test" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Button_Click"/>
    </Grid>
</Window>
